<script>
  // Toggle cheat sheet modal
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggleCheatSheet');
    const closeButton = document.getElementById('closeCheatSheet');
    const modal = document.getElementById('cheatSheetModal');
    
    if (toggleButton && closeButton && modal) {
      toggleButton.addEventListener('click', () => {
        modal.classList.remove('hidden');
        modal.classList.add('flex'); // Add flex when showing
      });
      
      closeButton.addEventListener('click', () => {
        modal.classList.add('hidden');
        modal.classList.remove('flex'); // Remove flex when hiding
      });
      
      // Close when clicking outside
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex'); // Remove flex when hiding
        }
      });
    }
  });
</script>