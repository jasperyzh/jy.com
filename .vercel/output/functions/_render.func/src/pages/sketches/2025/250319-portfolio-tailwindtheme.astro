---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TailwindCheatSheet from "@/components/TailwindCheatSheet.astro";

const sketch_title = "Portfolio - TailwindCSS";

const projects = [
  {
    title: "E-commerce Platform",
    description: "A full-stack e-commerce solution with product management, cart functionality, and secure checkout.",
    image: "https://images.unsplash.com/photo-1661956602944-249bcd04b63f?q=80&w=2070",
    tags: ["React", "Node.js", "MongoDB", "Stripe"],
    demoUrl: "#",
    codeUrl: "#",
  },
  {
    title: "Health & Fitness App",
    description: "Mobile-first fitness tracking application with workout plans, nutrition tracking, and progress analytics.",
    image: "https://images.unsplash.com/photo-1571019613914-85f342c6a11e?q=80&w=2070",
    tags: ["React Native", "Firebase", "GraphQL"],
    demoUrl: "#",
    codeUrl: "#",
  },
  {
    title: "AI Content Generator",
    description: "Using machine learning to create personalized content based on user preferences and behavior.",
    image: "https://images.unsplash.com/photo-1677442136019-21780ecad995?q=80&w=2070",
    tags: ["Python", "TensorFlow", "Flask", "AWS"],
    demoUrl: "#",
    codeUrl: "#",
  }
];

const skills = [
  { category: "Frontend", items: ["HTML5", "CSS3", "JavaScript (ES6+)", "React", "Vue", "TailwindCSS", "SASS"] },
  { category: "Backend", items: ["Node.js", "Python", "Django", "Express", "GraphQL", "REST API"] },
  { category: "Database", items: ["MongoDB", "PostgreSQL", "Firebase", "Redis"] },
  { category: "DevOps", items: ["Docker", "AWS", "CI/CD", "Git", "GitHub Actions"] },
  { category: "Tools", items: ["VS Code", "Figma", "Postman", "Jest", "Webpack"] }
];
---

<BaseLayout title={sketch_title}>
  <!-- Custom CSS for this page -->
  <style>
    /* Additional custom styles 
  body {
    font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
  }*/

    .skill-badge {
      transition: all 0.3s ease;
    }
    
    .skill-badge:hover {
      transform: translateY(-5px);
    }

    .project-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .social-icon {
      transition: all 0.3s ease;
    }
    
    .social-icon:hover {
      transform: scale(1.2);
    }
  </style>

  <!-- Hero Section -->
  <section class="relative bg-gray-900 text-white py-28 sm:py-36 overflow-hidden">
    <!-- Background Gradient with subtle pattern -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-blue-900 to-gray-900 opacity-90"></div>
    
    <!-- Decorative circle elements -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-blue-500 rounded-full filter blur-3xl opacity-20 -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-indigo-500 rounded-full filter blur-3xl opacity-20 translate-x-1/3 translate-y-1/3"></div>
    
    <div class="container mx-auto px-6 sm:px-8 z-10 relative">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 leading-tight tracking-tight">
          Hi, I'm <span class="text-blue-400 relative inline-block">
            Alex Johnson
            <span class="absolute bottom-0 left-0 w-full h-2 bg-blue-400 opacity-30 rounded"></span>
          </span>
        </h1>
        <p class="text-xl sm:text-2xl mb-6 text-blue-100">Full Stack Developer & UI/UX Enthusiast</p>
        <p class="text-lg mb-12 max-w-2xl mx-auto leading-relaxed text-gray-300">I craft beautiful, functional websites and applications with a focus on user experience and clean code.</p>
        <div class="flex flex-wrap justify-center gap-5">
          <a href="#projects" class="px-8 py-3.5 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-all shadow-lg hover:shadow-blue-500/30 hover:-translate-y-1">
            View My Work
          </a>
          <a href="#contact" class="px-8 py-3.5 bg-transparent border-2 border-blue-400 text-blue-400 hover:bg-blue-400/10 font-medium rounded-lg transition-all hover:-translate-y-1">
            Get In Touch
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Me Section -->
  <section id="about" class="py-28 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-6 sm:px-8">
      <div class="flex flex-col md:flex-row items-center gap-16 max-w-6xl mx-auto">
        <div class="md:w-2/5 mb-12 md:mb-0">
          <div class="relative">
            <!-- Decorative element behind image -->
            <div class="absolute -top-4 -left-4 w-full h-full rounded-xl bg-blue-100 dark:bg-blue-900/30 -z-10"></div>
            <!-- Proper sized image with fixed aspect ratio -->
            <div class="rounded-xl bg-white overflow-hidden border-4 border-white dark:border-gray-800 shadow-xl aspect-[4/5] max-w-sm mx-auto">
              <img 
                src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=987&auto=format&fit=crop" 
                alt="Alex Johnson" 
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Decorative dots -->
            <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-blue-500 opacity-10 rounded-full"></div>
            <div class="absolute -bottom-6 -right-6 w-32 h-32 border-2 border-dashed border-blue-400 dark:border-blue-600 rounded-full"></div>
          </div>
        </div>
        <div class="md:w-3/5">
          <div class="inline-block mb-2 py-1 px-3 bg-blue-100 dark:bg-blue-900/40 rounded-full">
            <p class="text-sm font-medium text-blue-800 dark:text-blue-300">About Me</p>
          </div>
          <h2 class="text-3xl sm:text-4xl font-bold mb-6 text-gray-900 dark:text-white">Creating digital experiences with purpose</h2>
          <p class="text-lg mb-6 text-gray-700 dark:text-gray-300 leading-relaxed">
            I'm a passionate Full Stack Developer with over 5 years of experience building web and mobile applications. 
            I specialize in creating intuitive, responsive interfaces and robust backend systems.
          </p>
          <p class="text-lg mb-10 text-gray-700 dark:text-gray-300 leading-relaxed">
            My journey in technology started with a computer science degree, but my love for creating digital experiences led me 
            to explore design principles, user psychology, and cutting-edge development practices.
          </p>
          <div class="flex flex-wrap gap-6">
            <div class="bg-gray-50 dark:bg-gray-800 p-5 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
              <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">5+</h3>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Years Experience</p>
            </div>
            <div class="bg-gray-50 dark:bg-gray-800 p-5 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
              <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">50+</h3>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Projects Completed</p>
            </div>
            <div class="bg-gray-50 dark:bg-gray-800 p-5 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
              <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">30+</h3>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Happy Clients</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-28 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-6 sm:px-8">
      <div class="text-center mb-20 max-w-3xl mx-auto">
        <div class="inline-block mb-2 py-1 px-3 bg-blue-100 dark:bg-blue-900/40 rounded-full">
          <p class="text-sm font-medium text-blue-800 dark:text-blue-300">My Portfolio</p>
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold mb-6 text-gray-900 dark:text-white">Featured Projects</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
          Here are some of my recent projects that showcase my skills and experience.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 max-w-7xl mx-auto">
        {projects.map((project, index) => (
          <div class="project-card bg-white dark:bg-gray-900 rounded-xl overflow-hidden shadow-xl border border-gray-100 dark:border-gray-700 group hover:border-blue-200 dark:hover:border-blue-900 transition-all duration-300">
            <div class="h-56 overflow-hidden relative">
              {/* Overlay gradient */}
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity z-10"></div>
              
              {/* Project image */}
              <img src={project.image} alt={project.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
              
              {/* Project number */}
              <div class="absolute top-4 right-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-white text-sm font-bold w-8 h-8 rounded-full flex items-center justify-center shadow-md">
                {index + 1}
              </div>
            </div>
            
            <div class="p-7">
              <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{project.title}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-5 line-clamp-3">{project.description}</p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {project.tags.map(tag => (
                  <span class="px-3 py-1 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-xs font-medium rounded-full">{tag}</span>
                ))}
              </div>
              
              <div class="flex justify-between pt-4 border-t border-gray-100 dark:border-gray-800">
                <a href={project.demoUrl} class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium transition-colors">
                  <span>Live Demo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
                
                <a href={project.codeUrl} class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium transition-colors">
                  <span>View Code</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-16">
        <a href="#" class="px-8 py-3.5 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-all shadow-lg hover:shadow-blue-500/30 hover:-translate-y-1 inline-flex items-center">
          <span>View All Projects</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="py-28 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-6 sm:px-8">
      <div class="text-center mb-20 max-w-3xl mx-auto">
        <div class="inline-block mb-2 py-1 px-3 bg-blue-100 dark:bg-blue-900/40 rounded-full">
          <p class="text-sm font-medium text-blue-800 dark:text-blue-300">My Expertise</p>
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold mb-6 text-gray-900 dark:text-white">Technical Skills</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
          I'm constantly learning and keeping up with the latest technologies to deliver the best solutions.
        </p>
      </div>
      
      <div class="max-w-6xl mx-auto">
        {/* Skills Category Tabs - Optional */}
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          {skills.map((skillGroup, index) => (
            <button class={`px-5 py-2 rounded-full text-sm font-medium transition-colors ${index === 0 ? 'bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-300' : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-blue-900/20'}`}>
              {skillGroup.category}
            </button>
          ))}
        </div>
        
        {/* Skills Grid */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
          {skills.map(skillGroup => (
            <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:border-blue-200 dark:hover:border-blue-800 transition-all duration-300 hover:shadow-md">
              <div class="flex items-center mb-6">
                <div class="mr-4 p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                  {/* Icon for each category */}
                  {skillGroup.category === 'Frontend' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  )}
                  {skillGroup.category === 'Backend' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                    </svg>
                  )}
                  {skillGroup.category === 'Database' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                    </svg>
                  )}
                  {skillGroup.category === 'DevOps' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  )}
                  {skillGroup.category === 'Tools' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">{skillGroup.category}</h3>
              </div>
              
              <div class="flex flex-wrap gap-2.5">
                {skillGroup.items.map(skill => (
                  <span class="skill-badge px-4 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg text-sm border border-gray-100 dark:border-gray-600 shadow-sm hover:shadow-md hover:border-blue-200 dark:hover:border-blue-800 hover:-translate-y-1 transition-all duration-300">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Get In Touch</h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Have a project in mind or want to collaborate? Feel free to reach out!
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                placeholder="your.email@example.com"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                placeholder="How can I help you?"
              ></textarea>
            </div>
            <button type="submit" class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors">
              Send Message
            </button>
          </form>
        </div>
        
        <!-- Contact Information -->
        <div class="bg-blue-600 text-white p-8 rounded-lg shadow-lg flex flex-col justify-between">
          <div>
            <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="text-blue-200 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-blue-200">Email</p>
                  <a href="mailto:alex@example.com" class="hover:underline">alex@example.com</a>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="text-blue-200 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-blue-200">Phone</p>
                  <a href="tel:+1234567890" class="hover:underline">+1 (234) 567-890</a>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="text-blue-200 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-blue-200">Location</p>
                  <p>San Francisco, CA</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="mt-12">
            <p class="mb-4 font-medium">Connect with me</p>
