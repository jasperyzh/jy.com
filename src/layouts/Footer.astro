---
// source: https://getbootstrap.com/docs/5.3/examples/footers/

import EmojiGreeting from "../components/EmojiGreeting.astro";
import { SITE_TITLE, SITE_FOOTER_ABOUT, SITE_YEAR } from "../consts";
---

<footer>
  <div class="container">
    <div class="footer_layout">
      <div class="footer_1">
        <!-- <p set:html={SITE_FOOTER_ABOUT} /> -->
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="#insta">Instagram</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="posts">Blog</a>
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
          </li> -->
        </ul>
      </div>
      <div class="footer_2">
        <a href="/">Back to Home</a>
      </div>
      <div class="footer_3">
        <p class="copy">
          &copy;{SITE_YEAR}
          {SITE_TITLE}
        </p>
      </div>
    </div>
  </div>
</footer>

<style is:global>
  .footer_layout {
    display: grid;

    grid-template-columns: 2fr 1fr;
    grid-template-rows: 1fr auto;
  }
  .footer_1 {
    grid-column: 1/2;
    grid-row: 1/-1;
  }
  .footer_2 {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
  }
  .footer_3 {
    grid-column: 2/3;
    grid-row: 2/3;
  }
  .copy {
    font-size: var(--fs-small);
  }

  footer {
    background-color: var(--bg-brand);
  }

  @media screen and (max-width: 768px) {
    .footer_layout {
      grid-template-columns: 1fr;
      justify-content: center;
      text-align: center;
    }
    .footer_1,
    .footer_2,
    .footer_3 {
      grid-column: 1/-1;
      grid-row: auto;
    }
  }
</style>
