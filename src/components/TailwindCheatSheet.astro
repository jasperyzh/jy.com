---

<div class="tw-cheatsheet bg-white dark:bg-gray-900 p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Tailwind CSS Cheat Sheet</h2>
  
  <!-- Buttons Section -->
  <section class="mb-8">
    <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Buttons</h3>
    <div class="flex flex-wrap gap-3">
      <!-- Primary Button -->
      <button class="px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
        Primary
      </button>
      
      <!-- Secondary Button -->
      <button class="px-4 py-2 bg-gray-200 text-gray-800 font-medium rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
        Secondary
      </button>
      
      <!-- Success Button -->
      <button class="px-4 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
        Success
      </button>
      
      <!-- Danger Button -->
      <button class="px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
        Danger
      </button>
      
      <!-- Outlined Button -->
      <button class="px-4 py-2 border border-blue-600 text-blue-600 font-medium rounded-md hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
        Outlined
      </button>
      
      <!-- Icon Button -->
      <button class="p-2 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </section>
  
  <!-- Card Layouts Section -->
  <section class="mb-8">
    <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Card Layouts</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Basic Card -->
      <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md">
        <div class="p-5">
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Basic Card</h4>
          <p class="text-gray-600 dark:text-gray-300">A simple card with padding and rounded corners.</p>
        </div>
      </div>
      
      <!-- Card with Image -->
      <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md">
        <img src="https://via.placeholder.com/400x200" alt="Card image" class="w-full h-48 object-cover"/>
        <div class="p-5">
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Card with Image</h4>
          <p class="text-gray-600 dark:text-gray-300">A card with an image at the top.</p>
        </div>
      </div>
      
      <!-- Card with Footer -->
      <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md flex flex-col">
        <div class="p-5 flex-grow">
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Card with Footer</h4>
          <p class="text-gray-600 dark:text-gray-300">A card with a separate footer section.</p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3 border-t border-gray-200 dark:border-gray-600">
          <a href="#" class="text-blue-600 dark:text-blue-400 hover:underline">View Details</a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Navigation Bar -->
  <section class="mb-8">
    <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Navigation Bar</h3>
    <div class="bg-gray-800 text-white">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <a href="#" class="text-xl font-bold">Logo</a>
            </div>
            <div class="hidden md:block ml-10">
              <div class="flex items-baseline space-x-4">
                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium bg-gray-900">Home</a>
                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">About</a>
                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Projects</a>
                <a href="#" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Contact</a>
              </div>
            </div>
          </div>
          <div>
            <button class="p-2 rounded-md hover:bg-gray-700 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Form Elements -->
  <section>
    <h3 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Form Elements</h3>
    <div class="space-y-4 max-w-md">
      <!-- Text Input -->
      <div>
        <label for="text-input" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Text Input</label>
        <input type="text" id="text-input" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white" placeholder="Enter text here..."/>
      </div>
      
      <!-- Textarea -->
      <div>
        <label for="textarea" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Textarea</label>
        <textarea id="textarea" rows="3" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white" placeholder="Enter multiple lines of text..."></textarea>
      </div>
      
      <!-- Select -->
      <div>
        <label for="select" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Select</label>
        <select id="select" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white">
          <option>Option 1</option>
          <option>Option 2</option>
          <option>Option 3</option>
        </select>
      </div>
      
      <!-- Checkbox -->
      <div class="flex items-center">
        <input type="checkbox" id="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-900" />
        <label for="checkbox" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Remember me</label>
      </div>
      
      <!-- Radio Buttons -->
      <div>
        <span class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Radio Buttons</span>
        <div class="space-y-2">
          <div class="flex items-center">
            <input type="radio" id="radio1" name="radio-group" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500 dark:border-gray-700" checked />
            <label for="radio1" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Option 1</label>
          </div>
          <div class="flex items-center">
            <input type="radio" id="radio2" name="radio-group" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500 dark:border-gray-700" />
            <label for="radio2" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Option 2</label>
          </div>
        </div>
      </div>
      
      <!-- Toggle Switch -->
      <div class="flex items-center">
        <button type="button" class="bg-gray-200 dark:bg-gray-700 relative inline-flex h-6 w-11 items-center rounded-full" role="switch" aria-checked="false">
          <span class="translate-x-1 inline-block h-4 w-4 transform rounded-full bg-white transition"></span>
        </button>
        <span class="ml-3 text-sm font-medium text-gray-700 dark:text-gray-300">Toggle Switch</span>
      </div>
    </div>
  </section>
</div>

<style>
  .tw-cheatsheet {
    container-type: inline-size;
  }
  
  @container (max-width: 768px) {
    .tw-cheatsheet section {
      margin-bottom: 2rem;
    }
  }
</style>
