---
interface Props {
  // date: Date;
  date: Date | undefined | null; // Allow undefined/null for check
  class?: string; // Make class optional
}

const { date, class: className } = Astro.props;
const isValidDate = date instanceof Date && !isNaN(date.valueOf());
---

{isValidDate ? (
  <time
    datetime={date.toISOString()}
    class={`font-mono text-sm text-gray-500 ${className ?? ''}`}
  >
    {
      `${date.getFullYear().toString().slice(-2)}${(date.getMonth() + 1).toString().padStart(2, "0")}${date.getDate().toString().padStart(2, "0")}`
    }
  </time>
) : (
  // Optionally render nothing or a placeholder if date is invalid
  null 
)}
