---
interface Props {
  /**
   * The date to be formatted. Can be a Date object, undefined, or null.
   * If the date is invalid, nothing will be rendered.
   */
  date: Date | undefined | null;
  /**
   * Optional CSS class to apply to the <time> element.
   */
  class?: string;
}

const { date, class: className } = Astro.props;
const isValidDate = date instanceof Date && !isNaN(date.valueOf());
---

{
  isValidDate ? (
    <time datetime={date.toISOString()} class={`${className} font-display-alt`}>
      {`${date.getFullYear().toString().slice(-2)}${(date.getMonth() + 1).toString().padStart(2, "0")}${date.getDate().toString().padStart(2, "0")}`}
    </time>
  ) : // Optionally render nothing or a placeholder if date is invalid
  null
}