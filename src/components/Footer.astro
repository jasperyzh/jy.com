<footer class="bg-white border-t border-gray-200 py-12 mt-24">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          <svg class="h-8 w-auto text-indigo-600" viewBox="0 0 40 40" fill="currentColor">
            <path d="M20 6.5C14.5 6.5 9.5 9 9.5 15.5C9.5 19.5 11.5 22 14.5 24L12 33.5L20 29L28 33.5L25.5 24C28.5 22 30.5 19.5 30.5 15.5C30.5 9 25.5 6.5 20 6.5Z"></path>
          </svg>
          <span class="ml-2 text-xl font-bold text-gray-900">JasperYong</span>
        </div>
        <p class="text-gray-600 max-w-md">
          Making the world a better place through constructing elegant hierarchies.
        </p>
        <div class="mt-4 flex space-x-4">
          {socialLinks.map((link) => (
            <a 
              href={link.href} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-gray-500"
              aria-label={`${link.platform} link`}
            >
              <span class="sr-only">{link.platform}</span>
              <span class="iconify w-5 h-5" data-icon={link.icon}></span>
            </a>
          ))}
        </div>
      </div>

      {footerLinks.map((section) => (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">
            {section.title}
          </h3>
          <ul class="mt-4 space-y-2">
            {section.items.map((link) => (
              <li>
                <a 
                  href={link.href} 
                  class="text-base text-gray-600 hover:text-gray-900"
                  {...(link.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} JasperYong.com. All rights reserved.
      </p>
    </div>
  </div>
</footer>
