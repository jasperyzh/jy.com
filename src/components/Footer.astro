---
/**
 * Contact Section Component
 *
 * A clean, minimal contact section with "Say Hello" message,
 * inspired by Circora's design.
 *
 * @component
 */

import { Icon } from "astro-icon/components";

export interface ContactSectionProps {
  /** Email address */
  email?: string;
  /** Phone number */
  phone?: string;
  /** Background color class */
  bgColor?: string;
  /** Text color class */
  textColor?: string;
  /** Custom CSS class */
  class?: string;
}

const {
  email = "hello@yourdomain.com",
  phone,
  bgColor = "bg-slate-900",
  textColor = "text-white",
  class: className = "",
} = Astro.props;

const socialLinks = [
  { platform: "facebook", href: "https://facebook.com", icon: "mdi:facebook" },
  {
    platform: "instagram",
    href: "https://www.instagram.com/jasperyzh/",
    icon: "mdi:instagram",
  },
  { platform: "twitter", href: "https://twitter.com", icon: "mdi:twitter" },
  {
    platform: "github",
    href: "https://github.com/jasperyzh/",
    icon: "mdi:github",
  },
  { platform: "youtube", href: "https://youtube.com", icon: "mdi:youtube" },
];

const todayYear = new Date().getFullYear();
---

<footer class={`${bgColor} ${className} w-full py-16 px-6 lg:px-16`}>
  <div class="max-w-6xl mx-auto">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center"
    >
      <!-- Say Hello heading -->
      <div>
        <h2 class={`${textColor} text-4xl md:text-5xl font-bold mb-2`}>
          Say Hello!
        </h2>
        <p
          class="text-balance text-lg text-gray-200 dark:text-gray-400"
        >
          I'm currently available for select projects.
          <br />If you're interested in collaborating, please reach out.
        </p>
      </div>

      <!-- Contact information -->
      <div id="contact" class="flex flex-col space-y-2">
        {
          email && (
            <a
              href={`mailto:${email}`}
              class={`${textColor} text-lg hover:opacity-80 transition-opacity`}
            >
              {email}
            </a>
          )
        }

        {
          phone && (
            <a
              href={`tel:${phone.replace(/[^0-9+]/g, "")}`}
              class={`${textColor} text-lg hover:opacity-80 transition-opacity`}
            >
              {phone}
            </a>
          )
        }

        <!-- Optional social links -->
        <div class="flex space-x-4 mt-6">
          <!-- <slot name="social" /> -->
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`${link.platform} link`}
                class="text-gray-100 dark:text-gray-200 hover:text-primary dark:hover:text-primary transition-colors text-2xl"
              >
                <Icon name={`bi:${link.platform}`} class="inline-block mb-2" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Copyright and additional info -->
    <div
      class={`${textColor} opacity-60 text-sm my-6 pt-8 border-t border-white/20`}
    >
      <!-- <slot name="footer" /> -->

      <div class="flex justify-between items-center">
        <span>Â© 2025 jasperyong.com</span>
        <div class="flex space-x-6">
          <a href="/docs" class="hover:underline">My Documentations</a>
          <a href="/portfolio" class="hover:underline">Portfolio</a>
          <a href="/resume" class="hover:underline">Resume</a>
        </div>
      </div>
    </div>
  </div>
</footer>
