---
const currentYear = new Date().getFullYear();

interface FooterLink {
  title: string;
  items: {
    text: string;
    href: string;
    external?: boolean;
  }[];
}

const footerLinks: FooterLink[] = [
  {
    title: "Solutions",
    items: [
      { text: "My Documentations", href: "/docs" },
      // { text: "Analytics", href: "#" },
      // { text: "Automation", href: "#" },
      // { text: "Commerce", href: "#" },
      // { text: "Insights", href: "#" },
    ],
  },
  /* {
    title: "Support",
    items: [
      { text: "Submit ticket", href: "#" },
      { text: "Documentation", href: "#" },
      { text: "Guides", href: "#" },
    ],
  },
  {
    title: "Company",
    items: [
      { text: "About", href: "#" },
      { text: "Blog", href: "/blog" },
      { text: "Jobs", href: "#" },
      { text: "Press", href: "#" },
    ],
  }, */
];

const socialLinks = [
  { platform: "facebook", href: "https://facebook.com", icon: "mdi:facebook" },
  {
    platform: "instagram",
    href: "https://www.instagram.com/jasperyzh/",
    icon: "mdi:instagram",
  },
  { platform: "twitter", href: "https://twitter.com", icon: "mdi:twitter" },
  {
    platform: "github",
    href: "https://github.com/jasperyzh/",
    icon: "mdi:github",
  },
  { platform: "youtube", href: "https://youtube.com", icon: "mdi:youtube" },
];

const todayYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 py-12 mt-auto">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          <svg
            class="h-8 w-auto text-primary"
            viewBox="0 0 40 40"
            fill="currentColor"
          >
            <path
              d="M20 6.5C14.5 6.5 9.5 9 9.5 15.5C9.5 19.5 11.5 22 14.5 24L12 33.5L20 29L28 33.5L25.5 24C28.5 22 30.5 19.5 30.5 15.5C30.5 9 25.5 6.5 20 6.5Z"
            ></path>
          </svg>
          <span class="ml-2 text-xl font-bold text-gray-900 dark:text-gray-100">JasperYong</span>
        </div>
        <p>
          <strong>Learner, web developer, and blogger.</strong>
        </p>
        <p class="text-gray-600 dark:text-gray-400 max-w-md">
          Thank you for visiting my website! This blog is a collection of my
          learnings, experiments, and personal projects. I hope you find
          something that inspires or resonates with you. Enjoy exploring, and
          come back soon!
        </p>
        <div class="mt-4 flex space-x-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`${link.platform} link`}
                class="text-gray-800 dark:text-gray-200 hover:text-primary dark:hover:text-primary transition-colors"
              >
                <i class={`bi bi-${link.platform}`} />
              </a>
            ))
          }
        </div>
      </div>

      {
        footerLinks.map((section) => (
          <div>
            <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 tracking-wider uppercase">
              {section.title}
            </h3>
            <ul class="mt-4 space-y-2">
              {section.items.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-base text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                    {...(link.external
                      ? { target: "_blank", rel: "noopener noreferrer" }
                      : {})}
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        &copy; {currentYear} JasperYong.com.
      </p>
    </div>
  </div>
</footer>
