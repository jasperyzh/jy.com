---
import { Icon } from "astro-icon/components";
import HelloGreeting from "./HelloGreeting.astro";
import Button from "./starwind/button";

export interface ContactSectionProps {
  /** Email address */
  email?: string;
  /** Phone number */
  phone?: string;
  /** Background color class */
  bgColor?: string;
  /** Text color class */
  textColor?: string;
  /** Custom CSS class */
  class?: string;
}

const {
  email = "jasper.yzh@gmail.com",
  textColor = "text-white",
  class: className = "",
} = Astro.props;

import {
  URL_FACEBOOK,
  URL_INSTAGRAM,
  URL_LINKEDIN,
  URL_GITHUB,
} from "@/consts";

const socialLinks = [
  {
    platform: "instagram",
    href: URL_INSTAGRAM,
    icon: "mdi:instagram",
  },
  { platform: "facebook", href: URL_FACEBOOK, icon: "mdi:facebook" },
  { platform: "linkedin", href: URL_LINKEDIN, icon: "mdi:linkedin" },
  {
    platform: "github",
    href: URL_GITHUB,
    icon: "mdi:github",
  },
];

const todayYear = new Date().getFullYear();
---

<div class="footer_container">
  <div class="hello_world">
    <HelloGreeting class="text-white" />

    <p class="text-balance text-lg text-gray-300">
      I'm currently available for select projects.
      <br />If you're interested in collaborating, please reach out.
    </p>
  </div>

  <div class="social_links my-4">
    {
      email && (
        <Button
          href={`mailto:${email}`}
          variant="ghost"
          class="text-gray-300 hover:text-gray-500"
        >
          <Icon name="bi:envelope-fill" />
          {email}
        </Button>
      )
    }
    <ul class="flex flex-row space-x-1">
      {
        socialLinks.map((link) => (
          <Button
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`${link.platform} link`}
            variant="ghost"
            class="text-gray-300 hover:text-gray-500"
          >
            <Icon name={`bi:${link.platform}`} />
          </Button>
        ))
      }
    </ul>
  </div>

  <hr class="border-gray-700 my-8" />

  <!-- Copyright and additional info -->
  <div
    class="flex flex-col-reverse md:flex-row items-start md:items-center md:justify-between gap-4"
  >
    <p class="text-gray-500 text-sm m-0 ms-2">Â© 2025 jasperyong.com</p>
    <div class="flex justify-between gap-6">
      <Button
        size="sm"
        href="/docs"
        variant="ghost"
        class="text-gray-300 hover:text-gray-500">My Documentations</Button
      >
      <Button
        size="sm"
        href="/portfolio"
        variant="ghost"
        class="text-gray-300 hover:text-gray-500">Portfolio</Button
      >
      <Button
        size="sm"
        href="/resume"
        variant="ghost"
        class="text-gray-300 hover:text-gray-500">Resume</Button
      >
    </div>
  </div>
</div>

<style>
  .footer_container {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: 1 / -1;

    & > * {
      grid-column: 1 / -1;
    }
    .social_links {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    @media (min-width: 768px) {
      .hello_world {
        grid-column: 1 / span 3;
      }

      .social_links {
        grid-column: auto / span 3;
        justify-self: end;
        align-items: flex-end;
      }
    }
  }
</style>
