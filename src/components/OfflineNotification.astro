---
// Offline notification component
---

<div id="offline-notification" class="offline-notification d-none">
  <div class="offline-content">
    <span>You're offline</span>
    <a href="/offline" class="btn btn-sm btn-outline-light ms-2">
      View cached pages
    </a>
  </div>
</div>

<style>
  .offline-notification {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--bs-danger);
    color: white;
    text-align: center;
    padding: 5px 10px;
    z-index: 1050;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .offline-content {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .d-none {
    display: none;
  }
</style>

<script>
  // Only run client-side
  if (typeof window !== 'undefined') {
    const offlineNotification = document.getElementById('offline-notification');
    
    // Function to check online status and update UI
    function updateOnlineStatus() {
      if (navigator.onLine) {
        offlineNotification?.classList.add('d-none');
      } else {
        offlineNotification?.classList.remove('d-none');
      }
    }
    
    // Add event listeners for online/offline events
    window.addEventListener('online', updateOnlineStatus);
    window.addEventListener('offline', updateOnlineStatus);
    
    // Check status when page loads
    document.addEventListener('DOMContentLoaded', updateOnlineStatus);
  }
</script>