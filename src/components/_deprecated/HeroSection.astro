---
/**
 * Hero Section Component
 * 
 * A full-width hero section with large headline and concise value proposition,
 * inspired by Circora's design.
 * 
 * @component
 */

export interface HeroSectionProps {
  /** The main headline */
  headline: string;
  /** The supporting subheadline */
  subheadline?: string;
  /** Background color class */
  bgColor?: string;
  /** Text color class */
  textColor?: string;
  /** Custom CSS class */
  class?: string;
}

const {
  headline,
  subheadline,
  bgColor = "bg-cream-50",
  textColor = "text-slate-900",
  class: className = "",
} = Astro.props;
---

<section class={`${bgColor} ${className} w-full min-h-[80vh] flex flex-col justify-center px-6 lg:px-16 py-24 relative`}>
  <div class="max-w-5xl xl:max-w-6xl">
    <h1 class={`${textColor} text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight mb-8`}>
      {headline}
    </h1>
    
    {subheadline && (
      <p class={`${textColor} text-xl md:text-2xl leading-relaxed max-w-3xl`}>
        {subheadline}
      </p>
    )}
    
    <div class="mt-12">
      <slot />
    </div>
  </div>
</section> 