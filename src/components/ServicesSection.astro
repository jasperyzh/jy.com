---
/**
 * Services Section Component
 * 
 * A section displaying services using circular elements,
 * inspired by Circora's design.
 * 
 * @component
 */

import CircleFeature from "./CircleFeature.astro";

export interface ServiceItem {
  title: string;
  href?: string;
  isActive?: boolean;
}

export interface ServicesSectionProps {
  /** The section title */
  title?: string;
  /** Array of services to display */
  services: ServiceItem[];
  /** Background color class */
  bgColor?: string;
  /** Text color class */
  textColor?: string;
  /** Custom CSS class */
  class?: string;
}

const {
  title = "What We Do",
  services = [],
  bgColor = "bg-cream-50",
  textColor = "text-slate-900",
  class: className = "",
} = Astro.props;
---

<section class={`${bgColor} ${className} w-full py-24 px-6 lg:px-16`}>
  <div class="max-w-6xl mx-auto">
    <!-- Section title -->
    <h2 class={`${textColor} text-sm uppercase tracking-widest mb-16 opacity-70`}>
      {title}
    </h2>
    
    <div class="mt-12">
      <!-- Text description (optional) -->
      <div class={`${textColor} text-xl md:text-2xl leading-relaxed max-w-3xl mb-16`}>
        <slot />
      </div>
      
      <!-- Services grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
        {services.map(service => (
          <CircleFeature
            title={service.title}
            href={service.href}
            isActive={service.isActive}
          />
        ))}
      </div>
    </div>
    
    <!-- Call to action -->
    <div class="mt-24 text-center">
      <slot name="cta" />
    </div>
  </div>
</section> 