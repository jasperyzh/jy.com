---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  twitter?: string;
  linkedin?: string;
}

const teamMembers: TeamMember[] = [
  {
    name: "Lindsay Walton",
    role: "Front-end Developer",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
  {
    name: "Courtney Henry",
    role: "Designer",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
  {
    name: "Tom Cook",
    role: "Director of Product",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
  {
    name: "Whitney Francis",
    role: "Copywriter",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
  {
    name: "Leonard Krasner",
    role: "Senior Designer",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
  {
    name: "Floyd Miles",
    role: "Principal Designer",
    image: "/img/placeholder.png",
    twitter: "#",
    linkedin: "#",
  },
];
---

<section class="py-24 bg-white">
  <div class="container px-4 mx-auto">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-bold mb-4 text-gray-900">Our team</h2>
      <p class="text-lg text-gray-600">
        We're a dynamic group of individuals who are passionate about what we do
        and dedicated to delivering the best results for our clients.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        teamMembers.map((member) => (
          <div class="group">
            <div class="relative overflow-hidden rounded-lg mb-4">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-auto aspect-[4/5] object-cover object-center transition-transform duration-300 group-hover:scale-105"
                onerror="this.src='/img/placeholder.png'"
              />
            </div>
            <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
            <p class="text-gray-600">{member.role}</p>
            <div class="mt-2 flex space-x-3">
              {member.twitter && (
                <a
                  href={member.twitter}
                  class="text-gray-400 hover:text-gray-500"
                  aria-label={`${member.name}'s Twitter`}
                >
                  <svg
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
              )}
              {member.linkedin && (
                <a
                  href={member.linkedin}
                  class="text-gray-400 hover:text-gray-500"
                  aria-label={`${member.name}'s LinkedIn`}
                >
                  <svg
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
