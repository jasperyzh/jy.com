---
/**
 * Blog Post Card Component
 * 
 * A specialized card component designed specifically for blog posts
 * with improved visual design and layout.
 * 
 * @component
 */

import {
  Card,
  CardContent,
  CardFooter,
  CardHeader,
} from "@/components/starwind/card";
import { Button } from "@/components/starwind/button";
import { Badge } from "@/components/starwind/badge";

export interface BlogPostCardProps {
  /** Post title */
  title: string;
  /** Post description */
  description: string;
  /** Publication date */
  date: Date;
  /** Array of tags */
  tags: string[];
  /** Category */
  category: string;
  /** URL to the full blog post */
  url: string;
  /** Thumbnail image URL */
  thumbnail: string;
}

const {
  title,
  description,
  date,
  tags = [],
  category,
  url,
  thumbnail = "/img/placeholder.png"
} = Astro.props;

// Format date to display in a user-friendly way
const formattedDate = date.toLocaleString("default", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<Card class="group flex flex-col h-full overflow-hidden transition-all duration-200 hover:shadow-lg border border-slate-200 dark:border-slate-700 hover:border-slate-300 dark:hover:border-slate-600">
  <div class="relative">
    <!-- Thumbnail image with gradient overlay -->
    <div class="aspect-video overflow-hidden bg-gradient-to-b from-slate-100 to-slate-200 dark:from-slate-800 dark:to-slate-900">
      <img 
        src={thumbnail} 
        alt={`Thumbnail for ${title}`} 
        class="w-full h-full object-cover object-center transform transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    
    <!-- Category badge -->
    <div class="absolute top-3 right-3">
      <Badge variant="secondary" class="bg-white/90 dark:bg-slate-900/90 backdrop-blur-sm shadow-sm">{category}</Badge>
    </div>
  </div>
  
  <CardHeader class="p-4">
    <div class="text-sm text-slate-500 dark:text-slate-400 mb-2 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
      </svg>
      {formattedDate}
    </div>
    
    <h3 class="text-xl font-bold leading-tight mb-2 group-hover:text-primary transition-colors duration-200">
      <a href={url} class="hover:underline decoration-2 underline-offset-2">{title}</a>
    </h3>
    
    <p class="text-slate-600 dark:text-slate-300 line-clamp-2 text-sm mb-3">{description}</p>
  </CardHeader>
  
  <CardContent class="px-4 pt-0 pb-2 mt-auto">
    <div class="flex flex-wrap gap-1">
      {tags.slice(0, 3).map((tag) => (
        <Badge variant="outline" class="text-xs bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700">
          <a href={`/blog/tag/${tag}`}>#{tag}</a>
        </Badge>
      ))}
      {tags.length > 3 && (
        <Badge variant="outline" class="text-xs">+{tags.length - 3}</Badge>
      )}
    </div>
  </CardContent>
  
  <CardFooter class="px-4 py-3 border-t border-slate-200 dark:border-slate-700 mt-auto">
    <Button variant="ghost" size="sm" class="w-full group-hover:bg-primary group-hover:text-white transition-colors duration-200">
      <span>Read Article</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </Button>
  </CardFooter>
</Card>

<style>
  /* Additional styles if needed */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 