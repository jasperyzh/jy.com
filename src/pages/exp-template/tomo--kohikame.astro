---
import Layout from "@/layouts/Layout.astro";

// import MobileMenu from "@/components/MobileMenu--.astro";
import MobileMenu from "@/components/MobileMenu--.astro";
---

<Layout>
  <div class="gradient--">
    <style>
      .gradient-- {
        background: #413534;
        background: linear-gradient(
          180deg,
          rgba(65, 53, 52, 1) 0%,
          rgba(101, 72, 68, 1) 50%,
          rgba(187, 98, 55, 1) 80%,
          rgba(116, 69, 44, 1) 100%
        );
      }
    </style>
    <header class="container grid grid-cols-2 py-8">
      <a href="/" class="brand"><strong>Slick</strong> inc.</a>
      <nav>
        <ul class="list-none flex gap-4 justify-end">
          <li><a href="#">Home</a></li>
          <li><a href="#">Pages ▾</a></li>
          <li><a href="#">Components ▾</a></li>
        </ul>
      </nav>

      <MobileMenu />

      <!-- <MobileMenu /> -->
    </header>

    <main>
      <!-- Hero Section -->
      <section id="hero">
        <div class="container grid-2">
          <div class="hero-text">
            <h1>Focus on the user experience</h1>
            <p>
              Slick is focused on the user experience to give your visitors the
              best experience every time they visit your site.
            </p>
            <a href="#" class="btn btn-primary">START WITH SLICK</a>
            <a href="#" class="btn btn-link">VIEW THE DEMOS →</a>
          </div>
          <div class="hero-image">
            <!-- Background image applied via CSS -->
          </div>
        </div>
      </section>


      <!-- Call to Action Section -->
      <section id="cta">
        <div class="container">
          <p>
            <span class="badge">Hot</span> Over 290 interface blocks, 140 demo pages
            and moduler Page Builder. <a href="#">Purchase Slick</a>
            exclusively from ThemeWagon.
          </p>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features">
        <div class="container grid-2">
          <img
            src="https://i.imgur.com/8L4k2rA.png"
            alt="iPad Pro showing features"
          />
          <div>
            <h2>What’s inside</h2>
            <p>
              At Slick's core, its all about giving you the power you need that
              reduces gap between you & the world's most talented web designers.
            </p>
            <article>
              <h4>Reusable components</h4>
              <p>With Slick, you can reuse any components anywhere.</p>
            </article>
            <article>
              <h4>Control through HTML</h4>
              <p>
                Without writing a line of CSS, and JavaScript you can design any
                functional layouts.
              </p>
            </article>
          </div>
        </div>
      </section>

      <!-- Team Section -->
      <section id="team">
        <div class="container">
          <h2>The crew behind Slick</h2>
          <div class="team-grid">
            <div class="team-member">
              <img src="https://i.imgur.com/iHk2C3k.jpeg" alt="Jason Smith" />
              <h4>Jason Smith</h4>
              <p>Project Lead</p>
            </div>
            <div class="team-member">
              <img src="https://i.imgur.com/Qk4j3Sg.jpeg" alt="Vanessa Laird" />
              <h4>Vanessa laird</h4>
              <p>UI Designer</p>
            </div>
            <div class="team-member">
              <img src="https://i.imgur.com/sC0tJ4x.jpeg" alt="Irea Evans" />
              <h4>Irea Evans</h4>
              <p>UX Designer</p>
            </div>
            <div class="team-member">
              <img
                src="https://i.imgur.com/sC0tJ4x.jpeg"
                alt="Mason Campbell"
              />
              <h4>Mason Campbell</h4>
              <p>Front End</p>
            </div>
            <div class="team-member">
              <img src="https://i.imgur.com/iHk2C3k.jpeg" alt="Jonas Hector" />
              <h4>Jonas Hector</h4>
              <p>Back End</p>
            </div>
            <div class="team-member">
              <img src="https://i.imgur.com/Qk4j3Sg.jpeg" alt="Sara Smith" />
              <h4>Sara Smith</h4>
              <p>Creative Writer</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Signup Section -->
      <section id="signup">
        <div class="container grid-2">
          <a
            href="https://www.youtube.com/watch?v=Cw58R9FWeCY"
            target="_blank"
            class="video-thumbnail"
          >
            <img src="https://i.imgur.com/8sXPp6W.jpeg" alt="Play Video" />
            <div class="play-button"></div>
          </a>
          <div>
            <h3>Create awesome digital experiences that last.</h3>
            <p>
              Slick has timeless codes in the background that you can use for
              next couple of years, undoubtedly.
            </p>
            <form>
              <input type="email" placeholder="Your Email" />
              <input type="password" placeholder="Password" />
              <a href="#" class="btn btn-success">CREATE AN ACCOUNT</a>
            </form>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer Section -->
    <footer>
      <div class="container footer-grid">
        <div>
          <h4><strong>Slick</strong> Inc.</h4>
          <p>© Copyright 2022</p>
        </div>
        <div>
          <h6>TRY FOR FREE</h6>
          <p>You can always come back and try our builder for free.</p>
        </div>
        <div>
          <h6>ABOUT</h6>
          <ul>
            <li><a href="#">Features</a></li>
            <li><a href="#">Pricing</a></li>
            <li><a href="#">Tour</a></li>
          </ul>
        </div>
        <div>
          <h6>HELP</h6>
          <ul>
            <li><a href="#">Portfolio</a></li>
            <li><a href="#">Work</a></li>
            <li><a href="#">Brands</a></li>
          </ul>
        </div>
        <div>
          <h6>RESOURCES</h6>
          <ul>
            <li><a href="#">Privacy</a></li>
            <li><a href="#">Support</a></li>
            <li><a href="#">Help Desk</a></li>
            <li><a href="#">FAQ</a></li>
          </ul>
        </div>
        <div>
          <h6>COMMERCIAL</h6>
          <ul>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Team</a></li>
            <li><a href="#">Career</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </footer>

    <main>
      <!-- ============================================-->
      <!-- <section> begin ============================-->
      <section class="bg-1100" id="content-1">
        <div class="container">
          <div class="row">
            <div class="col-md-11 col-lg-10">
              <div class="d-flex">
                <svg
                  class="bi bi-recycle d-flex me-2 me-sm-3 mt-3"
                  xmlns="http://www.w3.org/2000/svg"
                  width="95"
                  height="95"
                  fill="#FF9500"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M9.302 1.256a1.5 1.5 0 0 0-2.604 0l-1.704 2.98a.5.5 0 0 0 .869.497l1.703-2.981a.5.5 0 0 1 .868 0l2.54 4.444-1.256-.337a.5.5 0 1 0-.26.966l2.415.647a.5.5 0 0 0 .613-.353l.647-2.415a.5.5 0 1 0-.966-.259l-.333 1.242-2.532-4.431zM2.973 7.773l-1.255.337a.5.5 0 1 1-.26-.966l2.416-.647a.5.5 0 0 1 .612.353l.647 2.415a.5.5 0 0 1-.966.259l-.333-1.242-2.545 4.454a.5.5 0 0 0 .434.748H5a.5.5 0 0 1 0 1H1.723A1.5 1.5 0 0 1 .421 12.24l2.552-4.467zm10.89 1.463a.5.5 0 1 0-.868.496l1.716 3.004a.5.5 0 0 1-.434.748h-5.57l.647-.646a.5.5 0 1 0-.708-.707l-1.5 1.5a.498.498 0 0 0 0 .707l1.5 1.5a.5.5 0 1 0 .708-.707l-.647-.647h5.57a1.5 1.5 0 0 0 1.302-2.244l-1.716-3.004z"
                  ></path>
                </svg>
                <div class="flex-1 ps-2 ps-md-4">
                  <h2 class="fw-light mt-0 text-white lh-f2 mb-4">
                    <span class="fw-bold">Reusable</span> components
                  </h2>
                  <p class="lead text-500 mb-0">
                    Slick lets you fly to the highest peak of design with the
                    modular block of codes, drag and drop builder and prebuilt
                    172 unique sections, 21 prebuilt demo pages and 33 component
                    sets along with CSS helpers. <a
                      class="text-warning"
                      href="https://themewagon.com/themes/slick/"
                      target="_blank">Learn more ⟶</a
                    >
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section id="contact">
        <div class="container">
          <div class="contact-content">
            <div class="contact-text">
              <h2>Get in touch</h2>
              <p>
                Slick has a real team to support its customers and potential
                clients. Don't hesitate to ask us any questions.
              </p>
              <div class="contact-info">
                <h5>Slick HQ</h5>
                <p>
                  35 King Street<br />
                  Bristol, BS1 4DZ
                </p>
                <p>
                  <a href="tel:+112-334-48-55">+112-334-48-55</a>
                </p>
                <p>
                  <a href="mailto:info@slick.com">info@slick.com</a>
                </p>
              </div>
              <div class="social-links">
                <a href="#">Facebook</a>
                <a href="#">Twitter</a>
                <a href="#">Linkedin</a>
              </div>
            </div>

            <div class="contact-form">
              <h2>Drop us a line</h2>
              <p>
                Please let us know if you found any issue while checking the
                live preview or using the template.
              </p>
              <form>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required />

                <label for="email">Your Email</label>
                <input type="email" id="email" name="email" required />

                <label for="message">Message</label>
                <textarea id="message" name="message" rows="4" required
                ></textarea>

                <button type="submit" class="btn">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </section>
      <section class="py-8">
        <div class="container">
          <div
            class="grid grid-cols-1 items-center gap-8 rounded-xl bg-[#FCA927] p-8 text-black lg:grid-cols-12 lg:p-10"
          >
            <div class="lg:col-span-7">
              <img
                src="https://customer-gbu4wsrjcdamtxzc.cloudflarestream.com/2475d0688ab539894985de98161fea67/thumbnails/thumbnail.jpg"
                alt="Framework Laptop 16"
                class="rounded-lg"
              />
            </div>
            <div class="lg:col-span-5">
              <h3 class="font-framework-pixel text-3xl lg:text-4xl">
                Configure once. Upgrade whenever ❤.
              </h3>
              <p class="mt-4">
                Framework Laptop 16 is an endlessly customizable laptop with
                upgradeable graphics, powered by NVIDIA® GeForce RTX™ 5070 and
                AMD's latest Ryzen™ AI 300 Series Processors.
              </p>
              <div class="mt-8 flex flex-wrap gap-2">
                <a
                  href="/ca/en/products/laptop16-diy-amd-ai300/configuration/new"
                  class="inline-block max-w-max min-w-min rounded-full bg-[#FF7F50] px-4 py-2 font-semibold text-white transition-colors duration-300 ease-in-out hover:bg-opacity-80"
                  >Configure now</a
                >
                <a
                  href="/ca/en/laptop16"
                  class="inline-block max-w-max min-w-min rounded-full border border-black bg-transparent px-4 py-2 font-semibold text-black transition-colors duration-300 ease-in-out hover:bg-black hover:text-white"
                  >Learn more</a
                >
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  :root {
    --primary-blue: #007bff;
    --text-dark: #333;
    --text-light: #f8f9fa;
    --background-light: #fff;
    --background-dark: #212529;
    --container-width: 1140px;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-dark);
    background-color: var(--background-light);
    margin: 0;
  }

  .container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    background-color: var(--background-light);
    position: relative;
    z-index: 100;
  }

  header .brand {
    font-weight: bold;
    font-size: 1.5rem;
    text-decoration: none;
    color: var(--text-dark);
  }

  header nav ul {
    padding: 0;
    margin: 0;
    list-style: none;
    display: flex;
  }

  header nav ul li {
    margin: 0 1rem;
  }

  header nav a {
    color: var(--text-dark);
    text-decoration: none;
  }

  section {
    padding: 4rem 0;
  }

  h1,
  h2,
  h3,
  h4 {
    margin-top: 0;
    font-weight: 500;
  }

  h1 {
    font-size: 3rem;
  }
  h2 {
    font-size: 2.5rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  #hero {
  }
  #hero .hero-text {
    padding-right: 2rem;
  }
  #hero .hero-image {
    background-image: url("https://prium.github.io/slick/v2.0.0//assets/img/68.jpg");
    background-size: cover;
    background-position: center;
    min-height: 300px;
    border-radius: 5px;
  }
  .btn {
    display: inline-block;
    padding: 0.7rem 1.5rem;
    border-radius: 5px;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid transparent;
  }
  .btn-primary {
    background-color: var(--primary-blue);
    color: #fff;
  }
  .btn-link {
    color: var(--text-dark);
  }

  #cta {
    text-align: center;
    padding: 1rem 0;
    background-color: #f8f9fa;
  }
  #cta .badge {
    background-color: var(--primary-blue);
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.8rem;
  }

  #features {
    background-color: var(--background-dark);
    color: var(--text-light);
  }
  #features h2,
  #features h4 {
    color: var(--text-light);
  }
  #features p {
    color: #adb5bd;
  }

  #team {
    text-align: center;
  }
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  .team-member img {
    border-radius: 50%;
    width: 120px;
    height: 120px;
    object-fit: cover;
  }

  #signup {
    background-color: #f8f9fa;
  }
  #signup .video-thumbnail {
    position: relative;
  }
  #signup .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #signup .play-button::after {
    content: "▶";
    font-size: 20px;
    color: var(--text-dark);
  }
  form {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
  }
  input[type="email"],
  input[type="password"] {
    padding: 0.8rem;
    margin-bottom: 0.8rem;
    border: 1px solid #ced4da;
    border-radius: 5px;
  }
  .btn-success {
    background-color: #28a745;
    color: #fff;
    padding: 0.8rem;
    text-align: center;
  }

  footer {
    padding: 4rem 0;
    background-color: var(--background-light);
  }
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }
  footer h6 {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  footer ul li {
    margin-bottom: 0.5rem;
  }
  footer a {
    text-decoration: none;
    color: #6c757d;
  }
</style>
