<LayoutBase title="Resume">
  <div id="resume-container" class="bg-milk p-4 sm:p-8 print:p-0">
    <div
      class="mx-auto bg-white print:shadow-none"
      style="width: 210mm; min-height: 297mm;"
    >
      <article
        class="px-12 py-16 text-2a print:text-2a h-full resume-article"
        style="font-family: var(--default-font-family);"
      >
        <div class="grid-- grid--content_sidebar">
          <!-- Main Content (2/3) -->
          <main class="col-span-1">
            <div set:html={mainContent} />
          </main>

          <!-- Sidebar (1/3) -->
          <div class="col-span-1">
            <aside
              class="bg-milk/30 print:bg-milk/30 p-4 rounded-lg print:rounded-none"
            >
              <div set:html={asideContent} />
            </aside>
          </div>
        </div>

        <hr class="my-8 border-dashed border-grey/20" />
        <h2 class="text-center text-lg font-bold text-grey mb-4">
          Original HTML Version (for reference, to be removed)
        </h2>

        <div class="grid-- grid--content_sidebar">
          <!-- Main Content (2/3) -->
          <main class="col-span-1">
            <header class="mb-5">
              <h1
                class="text-2xl font-bold text-black mb-1"
                style="font-family: var(--font-display); line-height: 1.2;"
              >
                John Doe
              </h1>
              <p class="text-base font-normal text-grey mb-2">
                Senior Frontend Developer
              </p>
