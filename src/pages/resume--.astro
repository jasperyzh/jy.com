    </div>
  </div>
  <style>
    @reference "@/styles/tailwind--.css";

    .resume-article {
      h1 {
        @apply text-2xl font-bold text-black mb-1;
        font-family: var(--font-display);
        line-height: 1.2;
      }
      h2 {
        @apply text-sm font-bold border-b border-grey/20 pb-1 mb-3 text-black;
        font-family: var(--font-display);
        letter-spacing: 0.02em;
      }
      h3 {
        @apply text-sm font-semibold text-black mb-0.5;
      }
      p {
        @apply text-xs text-2a leading-relaxed;
      }
      ul {
        @apply list-disc list-inside text-2a space-y-0.5 text-xs leading-relaxed;
      }
      aside ul {
        list-style: disc;
      }
      aside ul.list-none {
        list-style: none;
        margin-left: 0;
      }
      aside li {
        @apply text-2a leading-4 list-outside;
      }
      aside ul {
        @apply space-y-1 text-xs;
      }
      aside h2 {
        @apply mb-2;
      }
    }

    main > section {
      margin: 0;
    }
    @media print {
      @page {
        size: A4;
        margin: 0;
      }

      body,
      #resume-container {
        margin: 0;
        padding: 0;
        background-color: #fff;
      }

      article {
        font-size: 9pt;
      }

      .break-inside-avoid {
        break-inside: avoid;
        page-break-inside: avoid;
      }

      /* Ensure proper spacing on print */
      h1,
      h2,
      h3 {
        page-break-after: avoid;
      }

      ul {
        page-break-inside: avoid;
      }

      /* Print-specific color adjustments */
      * {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }
  </style>
</LayoutBase>
