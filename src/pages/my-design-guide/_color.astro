---
import ColorPalette from "@/components/Tool__ColorPalette.astro";
---

<div class="container">
  <!-- Color Palette -->
  <header>
    <h2>color--</h2>
  </header>
  <div class="card-- card--dot card--2a flex flex-col items-center texture--">
    <div class="grid grid-cols-5 w-fit mb-8">
      <ColorPalette hex="#2a2a2a" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#131313" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#595959" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#dddddd" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#e3edef" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#dc725a" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#cca560" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#3e87ae" class="border-2a border-r-8 border-b-8" />
      <ColorPalette hex="#0bd8b6" class="border-2a border-r-8 border-b-8" />
    </div>
    <div
      class="grid-- w-full aspect-[3/4] gap-0 rounded-4xl overflow-hidden rounded-tl-none max-w-xl shadow--drop grid-cols-3"
    >
      <div class="bg-greylight"></div>
      <div class="bg-grey"></div>

      <div class="grid">
        <div class="bg-2a"></div>
        <div class="bg-green"></div>
      </div>

      <div class="grid-- col-span-3 grid-cols-3 gap-0">
        <div class="bg-milk col-span-2"></div>
        <div class="bg-black"></div>
      </div>

      <div class="bg-red"></div>
      <div class="bg-yellow"></div>

      <div class="bg-blue"></div>
    </div>
  </div>
</div>
