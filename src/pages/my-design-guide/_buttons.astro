<div class="grid-- grid--content_sidebar">
  <div
    class="buttons_light card--"
    style="background: transparent; box-shadow: none; color: var(--2a);"
  >
    <!-- Primary Buttons -->
    <div class="card--">
      <h3>Primary Buttons</h3>
      <p class="mb-6">Main action buttons with brand colors</p>

      <div class="flex flex-wrap gap-4">
        <button> Primary Button </button>
        <button class="btn--secondary"> Secondary Button </button>
      </div>
    </div>

    <!-- Button Sizes -->
    <div class="card--">
      <h3>Button Sizes</h3>
      <p>Different button sizes for various contexts</p>

      <div class="flex flex-wrap items-center gap-4">
        <button class="btn--sm"> Small Button </button>
        <button> Medium Button </button>
        <button class="btn--lg"> Large Button </button>
      </div>
    </div>
  </div>

  <div class="buttons_dark card-- texture--" style="background: var(--2a);">
    <!-- Textured Buttons -->
    <div class="card--">
      <h3>Textured Buttons</h3>
      <p class="mb-6">Buttons with brand texture effects</p>

      <div class="flex flex-wrap gap-4">
        <button
          class="texture-- px-6 py-3 font-medium rounded-lg hover:opacity-90 transition-all duration-300"
          style="background: var(--color-yellow); color: var(--2a);"
        >
          Textured Yellow
        </button>
        <button
          class="texture-- px-6 py-3 font-medium rounded-lg hover:opacity-90 transition-all duration-300"
          style="background: var(--2a); color: var(--color-milk);"
        >
          Textured Dark
        </button>
      </div>
    </div>

    <!-- Icon Buttons -->
    <div class="card--">
      <h3>Icon Buttons</h3>
      <p class="mb-6">Circular buttons for icons and compact actions</p>

      <div class="flex flex-wrap gap-4">
        <button
          class="w-12 h-12 rounded-full flex items-center justify-center font-bold hover:opacity-90 transition-all duration-300"
          style="background: var(--color-red); color: var(--color-milk);"
        >
          +
        </button>
        <button
          class="w-12 h-12 rounded-full flex items-center justify-center font-bold hover:opacity-90 transition-all duration-300"
          style="background: var(--color-blue); color: var(--color-milk);"
        >
          →
        </button>
        <button
          class="w-12 h-12 rounded-full flex items-center justify-center font-bold hover:opacity-90 transition-all duration-300"
          style="background: var(--color-green); color: var(--2a);"
        >
          ✓
        </button>
      </div>
    </div>

    <!-- Disabled State -->
    <div class="card--">
      <h3>Disabled State</h3>
      <p class="mb-6">Buttons in disabled state with reduced opacity</p>

      <div class="flex flex-wrap gap-4">
        <button
          disabled
          class="px-6 py-3 font-medium rounded-lg opacity-50 cursor-not-allowed"
          style="background: var(--color-grey); color: var(--color-milk);"
        >
          Disabled Primary
        </button>
        <button
          disabled
          class="px-6 py-3 border-2 font-medium rounded-lg opacity-50 cursor-not-allowed"
          style="border-color: var(--color-grey); color: var(--color-grey);"
        >
          Disabled Secondary
        </button>
      </div>
    </div>
  </div>
</div>
