// - https://codepen.io/hexagoncircle/full/jOzZPJw
// - https://codepen.io/hexagoncircle/pen/eYMrGwW
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>n8n - Workflow Automation for Technical Teams</title>
  <meta name="description" content="Flexible workflow automation for technical teams. Build multi-step automations with code when you need it, UI when you don't.">
  
  <!-- Preload critical fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <style is:inline>
    /* CSS Variables for n8n Design System */
    :root {
      /* n8n Brand Colors */
      --n8n-orange: #ff6d5a;
      --n8n-orange-light: #ff8a7a;
      --n8n-orange-dark: #e55a47;
      --n8n-purple: #7c3aed;
      --n8n-purple-light: #8b5cf6;
      --n8n-purple-dark: #6d28d9;
      --n8n-blue: #3b82f6;
      --n8n-blue-light: #60a5fa;
      --n8n-blue-dark: #2563eb;
      
      /* Dark Theme Colors */
      --n8n-bg-primary: #0a0a0a;
      --n8n-bg-secondary: #111111;
      --n8n-bg-tertiary: #1a1a1a;
      --n8n-bg-card: #1e1e1e;
      --n8n-text-primary: #ffffff;
      --n8n-text-secondary: #a1a1aa;
      --n8n-text-muted: #71717a;
      --n8n-border: #27272a;
      --n8n-border-light: #3f3f46;
      
      /* Gradients */
      --gradient-hero: linear-gradient(135deg, var(--n8n-orange) 0%, var(--n8n-purple) 50%, var(--n8n-blue) 100%);
      --gradient-card-1: linear-gradient(135deg, rgba(255, 109, 90, 0.1) 0%, rgba(124, 58, 237, 0.1) 100%);
      --gradient-card-2: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
      --gradient-card-3: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(255, 109, 90, 0.1) 100%);
      
      /* Shadows */
      --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-card-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --shadow-glow: 0 0 20px rgba(255, 109, 90, 0.3);
      
      /* Animation Variables */
      --animation-duration: 0.3s;
      --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background-color: var(--n8n-bg-primary);
      color: var(--n8n-text-primary);
      line-height: 1.6;
      overflow-x: hidden;
    }
    
    /* Utility Classes */
    .container {
      max-width: 1120px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .container-wide {
      max-width: 1312px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .container-full {
      width: 100%;
      padding: 0;
    }
    
    .gradient-text {
      background: var(--gradient-hero);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      text-decoration: none;
      transition: all var(--animation-duration) var(--animation-timing);
      cursor: pointer;
      border: none;
      font-size: 0.875rem;
    }
    
    .btn-primary {
      background: var(--gradient-hero);
      color: white;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-glow);
    }
    
    .btn-secondary {
      background: transparent;
      color: var(--n8n-text-primary);
      border: 1px solid var(--n8n-border-light);
    }
    
    .btn-secondary:hover {
      background: var(--n8n-bg-tertiary);
      border-color: var(--n8n-orange);
    }
    
    .card {
      background: var(--n8n-bg-card);
      border: 1px solid var(--n8n-border);
      border-radius: 1rem;
      padding: 2rem;
      transition: all var(--animation-duration) var(--animation-timing);
    }
    
    .card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-card-hover);
      border-color: var(--n8n-border-light);
    }
    
    /* Header Styles */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      background: rgba(10, 10, 10, 0.8);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--n8n-border);
      transition: all var(--animation-duration) var(--animation-timing);
    }
    
    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 0;
    }
    
    .logo {
      font-size: 1.5rem;
      font-weight: 800;
      color: var(--n8n-orange);
      text-decoration: none;
    }
    
    .nav {
      display: flex;
      align-items: center;
      gap: 2rem;
    }
    
    .nav-link {
      color: var(--n8n-text-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: color var(--animation-duration) var(--animation-timing);
    }
    
    .nav-link:hover {
      color: var(--n8n-text-primary);
    }
    
    .nav-actions {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    /* Hero Section */
    .hero {
      padding: 8rem 0 6rem;
      position: relative;
      overflow: hidden;
    }
    
    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 50% 50%, rgba(255, 109, 90, 0.1) 0%, transparent 50%),
                  radial-gradient(circle at 80% 20%, rgba(124, 58, 237, 0.1) 0%, transparent 50%),
                  radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
      animation: float 6s ease-in-out infinite;
    }
    
    .hero-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
      position: relative;
      z-index: 10;
    }
    
    .hero-content {
      text-align: left;
    }
    
    .hero-image {
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }
    
    .lightning-bolt {
      width: 300px;
      height: 400px;
      background: linear-gradient(135deg, #ff6d5a 0%, #7c3aed 50%, #3b82f6 100%);
      clip-path: polygon(20% 0%, 60% 0%, 40% 35%, 80% 35%, 75% 45%, 100% 45%, 30% 100%, 35% 60%, 0% 60%, 5% 50%, 20% 50%);
      position: relative;
      animation: glow 2s ease-in-out infinite alternate;
      filter: drop-shadow(0 0 20px rgba(255, 109, 90, 0.5));
    }
    
    .lightning-bolt::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 120%;
      height: 120%;
      background: linear-gradient(135deg, rgba(255, 109, 90, 0.3) 0%, rgba(124, 58, 237, 0.3) 50%, rgba(59, 130, 246, 0.3) 100%);
      clip-path: polygon(20% 0%, 60% 0%, 40% 35%, 80% 35%, 75% 45%, 100% 45%, 30% 100%, 35% 60%, 0% 60%, 5% 50%, 20% 50%);
      filter: blur(20px);
      z-index: -1;
    }
    
    .hero-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--n8n-text-secondary);
      margin-bottom: 2rem;
      max-width: 500px;
    }
    
    .hero-actions {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    /* Tabs Section */
    .tabs-section {
      padding: 5rem 0;
      background: var(--n8n-bg-secondary);
    }
    
    .tabs-container {
      width: 100%;
      background: var(--n8n-bg-card);
      border-radius: 1rem;
      border: 1px solid var(--n8n-border);
      overflow: hidden;
    }
    
    .tabs-header {
      display: flex;
      border-bottom: 1px solid var(--n8n-border);
    }
    
    .tab-button {
      flex: 1;
      padding: 1rem 2rem;
      background: transparent;
      border: none;
      color: var(--n8n-text-secondary);
      font-weight: 600;
      cursor: pointer;
      transition: all var(--animation-duration) var(--animation-timing);
      position: relative;
    }
    
    .tab-button.active {
      color: var(--n8n-text-primary);
      background: var(--n8n-bg-tertiary);
    }
    
    .tab-button.active::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--gradient-hero);
    }
    
    .tab-content {
      padding: 2rem;
      min-height: 400px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .tab-panel {
      display: none;
      text-align: center;
    }
    
    .tab-panel.active {
      display: block;
    }
    
    .tab-image {
      width: 100%;
      max-width: 600px;
      height: 300px;
      background: var(--gradient-card-1);
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--n8n-text-secondary);
    }
    
    /* Marquee Section */
    .marquee-section {
      padding: 5rem 0;
      background: var(--n8n-bg-primary);
    }
    
    .marquee-title {
      text-align: center;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 3rem;
    }
    
    .marquee-container {
      margin: 2rem 0;
      width: 100vw;
      position: relative;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }
    
    .marquee {
      display: flex;
      overflow: hidden;
      user-select: none;
      gap: var(--marquee-gap, 2rem);
      mask-image: linear-gradient(
        to right,
        hsl(0 0% 0% / 0),
        hsl(0 0% 0% / 1) 10%,
        hsl(0 0% 0% / 1) 90%,
        hsl(0 0% 0% / 0)
      );
    }
    
    .marquee__group {
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: space-around;
      gap: var(--marquee-gap, 2rem);
      min-width: 100%;
      animation: scroll-x var(--marquee-duration, 40s) linear infinite;
    }
    
    .marquee--reverse .marquee__group {
      animation-direction: reverse;
      animation-delay: -3s;
    }
    
    .marquee-item {
      flex-shrink: 0;
      width: 118px;
      height: 60px;
      background: var(--n8n-bg-card);
      border: 1px solid var(--n8n-border);
      border-radius: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--n8n-text-secondary);
      font-weight: 600;
      font-size: 0.875rem;
    }
    
    .social-proof {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .proof-card {
      background: var(--gradient-card-1);
      border: 1px solid var(--n8n-border);
      border-radius: 1rem;
      padding: 2rem;
      text-align: center;
    }
    
    .proof-number {
      font-size: 2rem;
      font-weight: 800;
      color: var(--n8n-orange);
      margin-bottom: 0.5rem;
    }
    
    .proof-text {
      color: var(--n8n-text-secondary);
    }
    
    /* AI Section */
    .ai-section {
      padding: 5rem 0;
      background: var(--n8n-bg-secondary);
    }
    
    .ai-title {
      text-align: center;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 3rem;
    }
    
    /* Bento Grid Layout */
    .bento-grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      grid-template-rows: auto auto;
      gap: 1.5rem;
      margin-top: 4rem;
    }
    
    .bento-card {
      position: relative;
      background: var(--n8n-bg-card);
      border: 1px solid var(--n8n-border);
      border-radius: 1.5rem;
      padding: 2rem;
      overflow: hidden;
      transition: all var(--animation-duration) var(--animation-timing);
    }
    
    .bento-card--large {
      grid-row: span 2;
    }
    
    .bento-card:hover {
      transform: translateY(-2px);
      border-color: var(--n8n-border-light);
    }
    
    /* Awesome Glow Effects */
    .bento-glow {
      position: absolute;
      inset: 0;
      border-radius: 1.5rem;
      opacity: 0;
      background: linear-gradient(135deg, var(--glow-color-1), var(--glow-color-2));
      transition: opacity 0.3s ease-out;
      z-index: 1;
      pointer-events: none;
      mask-image: radial-gradient(850px circle at 50% 50%, white, transparent);
      -webkit-mask-image: radial-gradient(850px circle at 50% 50%, white, transparent);
    }
    
    .bento-glow--orange {
      --glow-color-1: #af6005;
      --glow-color-2: #08707e;
    }
    
    .bento-glow--purple {
      --glow-color-1: #7c3aed;
      --glow-color-2: #6b21ef;
    }
    
    .bento-glow--color-blue {
      --glow-color-1: #3b82f6;
      --glow-color-2: #1d4ed8;
    }
    
    .bento-card:hover .bento-glow {
      opacity: 0.6;
    }
    
    .bento-content {
      position: relative;
      z-index: 10;
    }
    
    .bento-badge {
      display: inline-block;
      background: rgba(124, 58, 237, 0.2);
      color: var(--n8n-purple);
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 600;
      margin-bottom: 1rem;
      border: 1px solid rgba(124, 58, 237, 0.3);
    }
    
    .bento-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--n8n-text-primary);
    }
    
    .bento-description {
      color: var(--n8n-text-secondary);
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }
    
    .bento-button {
      background: var(--gradient-hero);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--animation-duration) var(--animation-timing);
    }
    
    .bento-button:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-glow);
    }
    
    .bento-list {
      list-style: none;
      padding: 0;
    }
    
    .bento-list li {
      padding: 0.5rem 0;
      color: var(--n8n-text-secondary);
    }
    
    .bento-visual {
      position: relative;
      z-index: 5;
      margin-top: 2rem;
    }
    
    /* Workflow Steps */
    .workflow-steps {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .step-item {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--n8n-border);
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      font-size: 0.875rem;
      color: var(--n8n-text-secondary);
      backdrop-filter: blur(10px);
    }
    
    .workflow-diagram {
      display: flex;
      justify-content: center;
      margin: 1rem 0;
    }
    
    /* Self-host diagram */
    .self-host-diagram {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding: 2rem;
    }
    
    .server-icon {
      animation: pulse 2s ease-in-out infinite;
    }
    
    .local-ai-badge {
      background: var(--gradient-hero);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      font-weight: 600;
    }
    
    /* Chat Interface */
    .chat-interface {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--n8n-border);
      border-radius: 1rem;
      overflow: hidden;
      backdrop-filter: blur(10px);
    }
    
    .chat-header {
      background: rgba(255, 255, 255, 0.1);
      padding: 1rem;
      border-bottom: 1px solid var(--n8n-border);
      font-weight: 600;
      color: var(--n8n-text-primary);
    }
    
    .chat-messages {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .chat-message {
      background: rgba(255, 109, 90, 0.1);
      border: 1px solid rgba(255, 109, 90, 0.2);
      border-radius: 0.75rem;
      padding: 0.75rem;
    }
    
    .message-text {
      font-size: 0.875rem;
      color: var(--n8n-text-secondary);
      line-height: 1.4;
    }
    
    .chat-input {
      background: rgba(255, 255, 255, 0.05);
      border-top: 1px solid var(--n8n-border);
      padding: 1rem;
      color: var(--n8n-text-muted);
      font-style: italic;
    }
    
    /* Code Section */
    .code-section {
      padding: 5rem 0;
      background: var(--n8n-bg-primary);
    }
    
    .code-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }
    
    .code-text h2 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
    }
    
    .code-text p {
      color: var(--n8n-text-secondary);
      margin-bottom: 2rem;
    }
    
    .code-features {
      list-style: none;
    }
    
    .code-features li {
      padding: 0.5rem 0;
      color: var(--n8n-text-secondary);
    }
    
    .code-features li::before {
      content: '‚úì';
      color: var(--n8n-orange);
      font-weight: bold;
      margin-right: 0.5rem;
    }
    
    .code-image {
      width: 100%;
      height: 400px;
      background: var(--gradient-card-2);
      border-radius: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--n8n-text-secondary);
    }
    
    /* Lightning Section */
    .lightning-section {
      padding: 5rem 0;
      background: var(--n8n-bg-secondary);
      position: relative;
      overflow: hidden;
    }
    
    .lightning-bg {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 200px;
      height: 200px;
      background: var(--gradient-hero);
      border-radius: 50%;
      filter: blur(100px);
      opacity: 0.3;
      animation: pulse 3s ease-in-out infinite;
    }
    
    .lightning-content {
      position: relative;
      z-index: 10;
      text-align: center;
    }
    
    .lightning-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 2rem;
    }
    
    .lightning-features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .lightning-feature {
      text-align: center;
      padding: 1rem;
    }
    
    .lightning-feature h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .lightning-feature p {
      color: var(--n8n-text-secondary);
    }
    
    /* Case Studies */
    .case-studies {
      padding: 5rem 0;
      background: var(--n8n-bg-primary);
    }
    
    .case-studies-title {
      text-align: center;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 3rem;
    }
    
    .case-studies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
    }
    
    .case-study-card {
      background: var(--gradient-card-1);
      border: 1px solid var(--n8n-border);
      border-radius: 1rem;
      padding: 2rem;
      transition: all var(--animation-duration) var(--animation-timing);
    }
    
    .case-study-card:nth-child(2) {
      background: var(--gradient-card-2);
    }
    
    .case-study-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-card-hover);
    }
    
    .case-study-logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--n8n-orange);
      margin-bottom: 1rem;
    }
    
    .case-study-metric {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 1rem;
    }
    
    .case-study-quote {
      color: var(--n8n-text-secondary);
      font-style: italic;
      margin-bottom: 1rem;
    }
    
    /* Embed Section */
    .embed-section {
      padding: 5rem 0;
      background: var(--n8n-bg-secondary);
    }
    
    .embed-card {
      background: var(--gradient-hero);
      border-radius: 2rem;
      padding: 4rem 2rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .embed-badge {
      display: inline-block;
      background: rgba(255, 255, 255, 0.2);
      padding: 0.5rem 1rem;
      border-radius: 2rem;
