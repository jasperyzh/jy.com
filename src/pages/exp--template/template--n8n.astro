  <script type="module">
    // Tab functionality
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabPanels = document.querySelectorAll('.tab-panel');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const targetTab = button.dataset.tab;
        
        // Remove active class from all buttons and panels
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabPanels.forEach(panel => panel.classList.remove('active'));
        
        // Add active class to clicked button and corresponding panel
        button.classList.add('active');
        document.getElementById(targetTab).classList.add('active');
      });
    });
    
    // Scroll-triggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);
    
    // Observe all fade-in elements
    document.querySelectorAll('.fade-in').forEach(el => {
      observer.observe(el);
    });
    
    // Header scroll effect
    let lastScrollY = window.scrollY;
    const header = document.querySelector('.header');
    
    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 100) {
        header.style.background = 'rgba(10, 10, 10, 0.95)';
      } else {
        header.style.background = 'rgba(10, 10, 10, 0.8)';
      }
      
      lastScrollY = currentScrollY;
    });
    
    // Pause marquee on hover
    const marquees = document.querySelectorAll('.marquee');
    marquees.forEach(marquee => {
      marquee.addEventListener('mouseenter', () => {
        marquee.style.animationPlayState = 'paused';
      });
      
      marquee.addEventListener('mouseleave', () => {
        marquee.style.animationPlayState = 'running';
      });
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Mouse-follow glow effects for bento cards
    const bentoCards = document.querySelectorAll('.bento-card');
    
    bentoCards.forEach(card => {
      const glow = card.querySelector('.bento-glow');
      if (!glow) return;
      
      let fadeTimeout;
      
      card.addEventListener('mouseenter', () => {
        // Clear any existing fade timeout
        if (fadeTimeout) {
          clearTimeout(fadeTimeout);
          fadeTimeout = null;
        }
        // Ensure glow is visible when mouse enters
        glow.style.opacity = '';
      });
      
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        
        // Calculate mouse position relative to the card
        const mouseX = e.clientX - rect.left;
        const mouseY = e.clientY - rect.top;
        
        // Update the radial gradient mask position
        const maskImage = `radial-gradient(850px circle at ${mouseX}px ${mouseY}px, white, transparent)`;
        glow.style.maskImage = maskImage;
        glow.style.webkitMaskImage = maskImage;
      });
      
      card.addEventListener('mouseleave', () => {
        // Keep glow at current position but start fading
        glow.style.transition = 'opacity 0.8s ease-out';
        glow.style.opacity = '0';
        
        // After fade completes, reset to center
        fadeTimeout = setTimeout(() => {
          const rect = card.getBoundingClientRect();
          const centerX = rect.width / 2;
          const centerY = rect.height / 2;
          
          const maskImage = `radial-gradient(850px circle at ${centerX}px ${centerY}px, white, transparent)`;
          glow.style.maskImage = maskImage;
          glow.style.webkitMaskImage = maskImage;
          
          // Reset transition back to original
          glow.style.transition = 'opacity 0.3s ease-out';
        }, 800); // Match the fade duration
      });
    });
  </script>
