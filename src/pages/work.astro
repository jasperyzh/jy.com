---
import Layout from "../layouts/Layout.astro";

import EntriesList from "../components/EntriesList.astro";
import SectionCta from "../components/SectionCta.astro";
// import ContactForm from "../components/ContactForm.astro";
---

<Layout default_footer={false}>
  <main class="d-flex flex-column align-items-center justify-content-center">
    <!-- <section class="container">
      <h2>Latest Posts</h2>
      <div class="masonry__layout">
        <EntriesList sort="desc" limit={6} />
      </div>
    </section> -->

    <section id="landing">
      <div class="container">
        <div class="landing_layout">
          <div
            class="landing_title bg-secondary text-start p-4"
            style="aspect-ratio: 4/3"
          >
            <h1 class="display-1">Client: Paramount Property</h1>
            <div class="info">
              <p class="h3">ParamountProperty.my</p>
              <p class="h3">Roles/Front-end Development</p>
              <p class="h3">UX / Visual / Design / System</p>
            </div>
          </div>

          <div class="landing_image bg-light">
            <img src="/placeholder.png" alt="" />
          </div>
        </div>
      </div>
    </section>

    <section id="project">
      <div class="container">
        <div class="landing_layout">
          <div class="about_content">
            <h2>Project Overview</h2>
            <p>
              Lorem ipsum dolor sit, amet consectetur adipisicing elit. At, ea!
              Reiciendis nobis, ad minima dicta cum distinctio labore excepturi
              laudantium nostrum, eaque rerum a debitis autem porro
              reprehenderit possimus culpa.
            </p>
            <div class="info">
              <p class="h3">year/2020</p>
              <p class="h3">client/Paramount Property</p>
              <p class="h3">agency/Fishermen</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <div class="footer_layout">
        <div class="footer_1">
          <img src="/placeholder.png" alt="" />
        </div>
        <div class="footer_2">
          <a href="/">Back to Home</a>
        </div>
        <div class="footer_3">
          <p class="copy">&copy;SITE_YEAR</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .landing_layout {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-template-rows: repeat(7, 1fr);

    & .landing_title {
      width: 100%;
      grid-column: 1/5;
      grid-row: 1/7;
    }
    & .landing_image {
      grid-column: 4/-1;
      grid-row: 4/ -1;
    }

    & .about_content {
      grid-column: -4/-1;
      grid-row: 1/ -1;
    }
    & .about_image {
      grid-column: 3/5;
      grid-row: 2/-1;
    }
  }
  .landing_title {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .landing_image img {
    width: 100%;
    height: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .about_content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* aspect-ratio: 4/3; */
  }

  section {
    padding-block: 3rem;
  }
</style>
